# Make it use C-a, similar to screen..
unbind C-b
#unbind l
set -g prefix C-a
bind-key C-a last-window
#bind-key C-b last-window
#bind-key C-space next-window
bind-key C-n next-window
bind-key C-p previous-window
bind-key C-d detach
unbind C-l
bind-key C-l list-windows
unbind C-c
bind-key C-c new-window
unbind A
bind A command-prompt "rename-window %%"
bind-key C-k kill-window
bind-key k kill-window
bind-key | split-window -h
bind-key _ split-window -v

# moving between pans
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# Reload key
bind r source-file ~/.tmux.conf

# Some issues with background in vim
#set -g default-terminal "xterm-256color"
set -g default-terminal "xterm-256color"
set -sa terminal-overrides "*:Tc"
#set -g default-terminal "screen-256color"
#set -g default-terminal "xterm"
set -g history-limit 100000

# THEME
set -g status-bg default
set -g status-fg white
set -g status-interval 60
set -g status-left-length 30
set -g status-left '#[fg=orange](#S) #(whoami)@#H#[default]'
set -g status-right '#[fg=green]#(cut -d " " -f 1-3 /proc/loadavg)#[default] #[fg=green]%D %H:%M#[default]'

# activity monitoring
setw -g monitor-activity on
set -g visual-activity on

#setw -g automatic-rename

set-window-option -g window-status-current-style fg=brightwhite
set-window-option -g window-status-current-style bg=black
set-window-option -g window-status-current-style bright
setw -g window-status-activity-style bg=black
setw -g window-status-activity-style fg=yellow
set-option -g status-style bg=default


# MacOS mouse
set -g mouse on
#set -g mouse-resize-pane on
#set -g mouse-select-pane on
#set -g mouse-select-window on
